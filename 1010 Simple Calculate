#include <stdio.h>

int main() {
    int code1,code2,unit1,unit2;
    float perunit1,perunit2,valorapagar;
    scanf("%d %d %f\n",&code1,&unit1,&perunit1);
    scanf("%d %d %f",&code2,&unit2,&perunit2);
    valorapagar=(unit1*perunit1)+(unit2*perunit2);
    printf("VALOR A PAGAR: R$ %.2f",valorapagar);
 
    return 0;
}
